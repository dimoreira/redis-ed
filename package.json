{
  "name": "redis-ed",
  "version": "0.1.3",
  "private": true,
  "main": "public/electron.js",
  "target": "electron-renderer",
  "output": {
    "publicPath": ""
  },
  "homepage": "http://github.com/redvulps/redis-ed",
  "author": {
    "name": "FÃ¡bio Rogerio Pereira",
    "email": "fabopereira@gmail.com"
  },
  "dependencies": {
    "electron-is-dev": "^1.0.1",
    "react": "^16.6.0",
    "react-dev-utils": "^6.0.5",
    "react-dom": "^16.6.0",
    "redis": "^2.8.0"
  },
  "scripts": {
    "dev": "yarn react-scripts start",
    "build": "react-scripts build",
    "start": "concurrently \"cross-env BROWSER=none yarn react-scripts start\" \"wait-on http://localhost:3000 && electron .\"",
    "pack": "electron-builder --dir",
    "release": "yarn build && npx build --x64 --macos --win --linux --c.extraMetadata.main=build/electron.js -p always",
    "release-linux": "yarn build && npx build --x64 --linux --c.extraMetadata.main=build/electron.js -p always && yarn cleanup",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "cleanup": "rm -rf build/"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ],
  "devDependencies": {
    "concurrently": "^4.0.1",
    "cross-env": "^5.2.0",
    "electron": "^3.0.5",
    "electron-builder": "^20.28.4",
    "electron-devtools-installer": "^2.2.4",
    "react-scripts": "2.0.5",
    "version-bump-prompt": "^4.2.1",
    "wait-on": "^3.1.0"
  },
  "build": {
    "files": [
      "*.js",
      "build",
      "node_modules"
    ],
    "extends": null,
    "appId": "com.your-domain",
    "compression": "normal",
    "productName": "Example",
    "extraMetadata": {
      "homepage": "./"
    },
    "directories": {
      "buildResources": "resources",
      "output": "release"
    },
    "linux": {
      "target": [
        "deb"
      ]
    }
  }
}
